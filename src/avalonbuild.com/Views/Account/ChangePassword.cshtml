@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
	ViewBag.Description = "Change Password";
}

@section Styles {
	<link rel="stylesheet" href="~/css/pages/changepassword.css">
}

<section id="changepassword">

	<div class="container">

        <header>

			<h2>@ViewBag.Title</h2>

		</header>

		<form asp-controller="Account" asp-action="ChangePassword" method="post">

            <div asp-validation-summary="All" class="alert"></div>

            <div class="field">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword"/>
                <span asp-validation-for="OldPassword" class="hint"></span>
            </div>

            <div class="field">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword"/>
                <span asp-validation-for="NewPassword" class="hint"></span>
            </div>

            <div class="field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword" class="hint"></span>
            </div>

			<p>
				<button type="submit">Change Password</button>
			</p>

		</form>

	</div>

</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
