@model List<ApplicationUser>

@{
    ViewBag.Title = "Users";
	ViewBag.Description = "Users";
}

@section Styles {
	<link rel="stylesheet" href="~/css/pages/users.css">
}

<section id="users">

	<div class="container">

		<header>

			<h2>@ViewBag.Title</h2>

		</header>

		@if (Model.Count > 0)
		{
			<table>

                <thead>

                    <th>Email</th>
                    <th>Options</th>

                </thead>

				@foreach (var user in Model)
				{
					<tr>

                        <td>@user.Email</td>
                        <td><a asp-controller="Users" asp-action="Delete" asp-route-email="@user.Email">Delete</a></td>

					</tr>
				}
			</table>
		}

        <a asp-controller="Users" asp-action="Add" class="button">Add User</a>

	</div>

</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
