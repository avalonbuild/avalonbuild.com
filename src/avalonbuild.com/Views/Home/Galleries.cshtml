@model System.Collections.Generic.List<avalonbuild.com.Models.Galleries.Gallery>

@{
    ViewBag.Title = "Galleries";
	ViewBag.Description = "Galleries";
}

@section Styles {
	<link rel="stylesheet" href="~/css/pages/galleries.css">
}

<section id="galleries">

	<div class="container">

		<header>

			<h2>Galleries</h2>

		</header>

		@if (Model.Count > 0)
		{
			<ul>
				@foreach (var gallery in Model)
				{
					<li>

						<a href="@gallery.Url">

							<figure>
								<img src="@Url.Content(@gallery.ImageUrl)" alt="@gallery.Name">
								<figcaption>
									<h3>@gallery.Name</h3>
								</figcaption>
							</figure>

						</a>

					</li>
				}
			</ul>
		}
	</div>

</section>