@model System.Collections.Generic.List<avalonbuild.com.ViewModels.Gallery>

@{
    ViewBag.Title = "Galleries";
	ViewBag.Description = "Galleries";
}

@section Styles {
	<link rel="stylesheet" href="~/css/pages/galleries.css">
}

@section Scripts {

	<script>

		$(function () {

			//
			// Make saving images a little more difficult
			//

			$("body").on("contextmenu", "img", function(e) {
				return false;
			});
		});

	</script>
}

<section id="galleries">

	<div class="container">

		<header>

			<h2>Galleries</h2>

		</header>

		@if (Model.Count > 0)
		{
			<ul>
				@foreach (var gallery in Model)
				{
					<li>

						<a href="/gallery/@gallery.Name">

							<figure>
								<img src="/file/@gallery.Images[0].FileName" alt="@gallery.Title">
								<figcaption>
									<h3>@gallery.Title</h3>
								</figcaption>
							</figure>

						</a>

					</li>
				}
			</ul>
		}
	</div>

</section>