@model avalonbuild.com.ViewModels.Gallery

@{
    ViewBag.Title = Model.Title;
	ViewBag.Description = Model.Description;
}

@section Styles {
	<link rel="stylesheet" href="~/css/pages/gallery.css">
}

<section id="gallery">

	<div class="container">

		<header>

			<h2>@Model.Title</h2>

		</header>

		@if (Model.Images.Count > 0)
		{
			<ul>
				@foreach (var image in Model.Images)
				{
					<li>

						<a href="">

						<figure>
							<img src="/file/@image.FileName" alt="@image.Title">
							<figcaption>
								<h3>@image.Title</h3>
							</figcaption>
						</figure>

						</a>

					</li>
				}
			</ul>

		}
		else
		{
			<div>No Images</div>
		}

	</div>

</section>